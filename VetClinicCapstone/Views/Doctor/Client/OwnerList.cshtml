@{
	ViewData["Title"] = "View";
	Layout = "~/Views/Shared/_Layout.cshtml";
	@using VetClinicCapstone.Models.ViewModel;
	@model IEnumerable<OwnerTbl>

}
<div class="container-full">
	<div class="content-header">
		<div class="d-flex align-items-center">
			<div class="mr-auto">
				<h4 class="page-title">Client List</h4>
			</div>

		</div>
	</div>


	<section class="content">

		<div class="col-12">
			<div class="box">
				<div class="box-body">
					<h4 class="box-title">Clients</h4>
					<a href="@Url.Action("AddPatient","Patient")" class="btn btn-rounded btn-outline-success pull-right mb-15 text-dark">Add Patient</a>
					<div class="table-responsive">
						<div id="example1_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
							<table id="example1" class="table-striped table-hover table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
								<thead>
									<tr>

										<th class="bb-2">Owner Name</th>
										<th class="bb-2">Address</th>
										<th class="bb-2">Status</th>
										<th class="bb-2">Owner Name</th>
										<th class="bb-2">Owner Contact</th>
										<th class="bb-2">Date</th>
										<th class="bb-2">Action</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var list in Model)
									{
										<tr>
											<td>@list.Firstname</td>
											<td>@list.Midname</td>
											<td>@list.Lastname</td>
											<td>@list.Phone</td>
											<td>May 2, 2024</td>
											<td>Check Up</td>
											<td>
												<a href="#" class="btn-info btn-sm" data-toggle="modal" data-target=".bs-example-modal-lg" data-id="@list.Owner_ID">View</a>
												<a asp-action="edit" asp-controller="Patient" asp-route-id="@list.Owner_ID" class="btn-success btn-sm">Edit</a>
												<a asp-action="edit" asp-controller="Patient" asp-route-id="@list.Owner_ID" class="btn-warning btn-sm">Check u</a>

											</td>
										</tr>
									}

								</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- /.box-body -->
			</div>
		</div>
	</section>
</div>

<!--Model Popup Area-->


