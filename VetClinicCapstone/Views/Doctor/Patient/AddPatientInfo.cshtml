@{
	ViewData["Title"] = "AddPatientInfo";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@using VetClinicCapstone.Models;
@model PatientTbl
<div class="container-full">
	<form method="post" id="AddPatientForm">
	<section class="content">
		<div class="box">
			<div class="box-body">
				<h4 class="box-title text-info"><i class="ti-user mr-15"></i> About Patient Info</h4>
				<hr class="my-15">
				<div class="row">
					<div class="col-md-6">

						<div class="form-group">
							<label>Pet Name</label>
							<input asp-for ="PatientName"type="text" class="form-control" placeholder="Pet Name">
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Species</label>
							<input asp-for="Species" type="text" class="form-control" placeholder="Species">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label>Breed</label>
							<input asp-for ="Breed"type="text" class="form-control" placeholder="Breed">
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Color Marking</label>
								<input name="ColorMarking"type="text" class="form-control" placeholder="Color Marking">
						</div>
					</div>


				</div>
				<div class="row">

					
					<div class="col-md-6">
						<div class="form-group">
							<label>Date of Birth</label>
								<input name="Birthday" type="date" class="form-control">
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Sex</label>
							<select name="Sex" class="form-control">
								<option>-Select-</option>
								<option>Male</option>
								<option>Female</option>
							</select>
						</div>
					</div>
						<div class="col-md-10">
							<div class="form-group">
								<label>Description</label>
								<textarea name="Description"type="text" class="form-control" placeholder="Description"></textarea>
							</div>
						</div>
				</div>

				<div class="box-footer text-right">
					<button type="button" class="btn btn-rounded btn-warning btn-outline mr-1">
						<i class="ti-trash"></i> Cancel
					</button>
					<button id="buttonsave" type="submit" class="btn btn-rounded btn-primary btn-outline">
						<i class="ti-save-alt"></i> Save
					</button>
				</div>
			</div>
		</div>
	</section>
	</form>
</div>

<script src="~/js/helper.js"></script>
<script>
	$(document).ready(function () {
		$('#buttonsave').click(function (e) {
			e.preventDefault();
			SavingFunction({
				url: "@Url.Action("AddPatientInfo", "Patient")",
				form: "#AddPatientForm",
				title: "Are you sure",
				message: "Do yo want to save this record",
				redirection: "@Url.Action("List", "Patient")",
			});

		});
	});
</script>

