@using VetClinicCapstone.Models.ViewModel;

@model OwnerTbl


@{
	ViewData["Title"] = "AddPatient";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-full">
	<div class="content-header">
		<div class="d-flex align-items-center">
			<div class="mr-auto">
				<h4 class="page-title">Add Owner</h4>
			</div>

		</div>
	</div>

	<form method="post" id="AddOwnerForm">
		<section class="content">
			<div class="box">
				<div class="box-body">
					<h4 class="box-title text-info"><i class="ti-user mr-15"></i> About Owner Info</h4>
					<hr class="my-15">
					<div class="row">
						<div class="col-md-3">
							<div class="form-group">
								<label>First Name</label>
								<input asp-for="Firstname" type="text" class="form-control" placeholder="First Name">
							</div>
						</div>

						<div class="col-md-3">
							<div class="form-group">
								<label>Middle Name</label>
								<input asp-for="Midname" type="text" class="form-control" placeholder="Middle Name">
							</div>
						</div>

						<div class="col-md-3">
							<div class="form-group">
								<label>Last Name</label>
								<input asp-for="Lastname" type="text" class="form-control" placeholder="Last Name">
							</div>
						</div>
						<div class="col-md-1">
							<div class="form-group">
								<label>Suffix</label>
								<input asp-for="SuffixName" type="text" class="form-control" placeholder="Jr.">
							</div>
						</div>
						<div class="col-md-2">
							<div class="form-group">
								<label>Sex</label>
								<select asp-for="Sex" class="form-control">
									<option value="N/A">Select</option>
									<option value="Male">Male</option>
									<option value="Female">Female</option>
								</select>
							</div>
						</div>
					</div>
					<div class="row">


						<div class="col-md-6">
							<div class="form-group">
								<h5>Email<span class="text-danger">*</span></h5>
								<div class="controls">
									<input type="email" name="email" class="form-control" required data-validation-required-message="This field is required">
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label>Contact Number</label>
								<input asp-for="Phone" type="text" class="form-control" placeholder="Contact Number">
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-md-3">
							<div class="form-group">
								<label>Street</label>
								<input asp-for="Street" type="text" class="form-control" placeholder="No. / Street">
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label>Barangay</label>
								<input asp-for="Baranggay" type="text" class="form-control" placeholder="Barangay">
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label>Municipality</label>
								<input asp-for="City" type="text" class="form-control" placeholder="Municipality">   <!----change field name---->
							</div>
						</div>
						<div class="col-md-3">
							<div class="form-group">
								<label>Province</label>
								<input asp-for="Province" type="text" class="form-control" placeholder="Province">
							</div>
						</div>



					</div>

					<div class="box-footer text-right">
						<button type="button" class="btn btn-rounded btn-warning btn-outline mr-1">
							<i class="ti-trash"></i> Cancel
						</button>
						<button id="buttonsave" type="submit" class="btn btn-rounded btn-primary btn-outline">
							<i class="ti-save-alt"></i> Save
						</button>
					</div>

				</div>
			</div>



		</section>
	</form>
</div>
<script src="~/js/helper.js"></script>
<script>
	$(document).ready(function () {
		$('#buttonsave').click(function (e) {
			e.preventDefault();
			SavingFunction({
				url: "@Url.Action("AddOwnerInfo", "Patient")",
				form: "#AddOwnerForm",
				title: "Are you sure",
				message: "Do yo want to save this record",
				redirection: "@Url.Action("List", "Patient")",
			});

		});
	});
</script>

